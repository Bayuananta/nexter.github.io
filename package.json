    "glob-parent": "^5.1.2",
    "immutable": "^4.2.1",
    "is-binary-path": "^2.1.0",
    "is-extglob": "^2.1.1",
    "is-glob": "^4.0.3",
    "is-number": "^7.0.0",
    "jquery": "^3.6.3",
